{% extends 'base.html.twig' %}


{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 1000px; width: 95%; font: 18px/1.5 sans-serif; text-align: center}
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }

    </style>



    <div class="example-wrapper">
        <h2> To see the display board enter your Registration Code </h2>
        {{ form_start(form) }}
        {{ form_widget(form.registrationCode, {'attr':
            {'class': 'search-term', 'placeholder': 'Registration code'}}
        ) }}

<div class="example-wrapper">
        {{ form_widget(form.search, {'attr':
            {'class': 'search-button btn btn-success center', 'label': 'Search'}}
        ) }}
        {{ form_end(form) }}
</div>



    </div>
{% endblock %}
