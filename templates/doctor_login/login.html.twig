{% extends 'baseNoHeader.html.twig' %}

{% block body %}
    <style>
        .example-wrapper { border-radius: 25px; margin: 1em auto; max-width: 700px; width: 95%; font: 18px/1.5 sans-serif; text-align: center}
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
        .spaces {margin: 1em auto}
        .button {
            background-color: #4CAF50; /* Green */
            border: none;
            color: white;
            padding: 15px 32px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            font-size: 16px;
        }
    </style>
    <body class="authentication">

                        <form action="{{ path('login') }}" method="POST" >


    <div style="background-color:#FFEFD5; " class="example-wrapper code">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey }}</div>
        {% endif %}
        <br>
        <h2 >Log in</h2>
                            <div class="spaces ">

                                <label for="_usernane">
                                    Username</label>
                                <br>
                                <input type="text" name="_username" value="{{ last_username }}" placeholder="Username" required="">
                            </div>

                            <div class="form-group">
                                <label for="_password">
                                    Password</label>
                                <br>
                                <input  type="password" name="_password" placeholder="Password" required="" >
                            </div>

                        <button class="button spaces disable-on-click"  type="submit">Login</button>
        <br>
    </div>
                        </form>
    </div>

    </body>


{% endblock %}
